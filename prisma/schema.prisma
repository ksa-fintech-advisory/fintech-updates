// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Author {
  id        String   @id @default(cuid())
  name      String
  nameAr    String?
  bio       String?
  bioAr     String?
  role      String?
  roleAr    String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  blogs Blog[]
}

model BlogCategory {
  id        String   @id @default(cuid())
  name      String
  nameAr    String
  slug      String   @unique
  color     String
  icon      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  blogs Blog[]
}

model Blog {
  id             String       @id @default(cuid())
  slug           String       @unique
  titleEn        String
  titleAr        String
  excerptEn      String
  excerptAr      String
  contentEn      String       // JSON string of content blocks
  contentAr      String       // JSON string of content blocks
  featuredImage  String
  tags           String       // JSON array of tags
  publishedAt    DateTime
  readTime       Int
  relatedPostIds String?      // JSON array of blog IDs
  authorId       String
  categoryId     String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  author   Author       @relation(fields: [authorId], references: [id])
  category BlogCategory @relation(fields: [categoryId], references: [id])

  @@index([slug])
  @@index([categoryId])
  @@index([publishedAt])
}

model Update {
  id             String   @id @default(cuid())
  titleEn        String
  titleAr        String
  descriptionEn  String
  descriptionAr  String
  summaryEn      String   // Brief overview (EN)
  summaryAr      String   // Brief overview (AR)
  icon           String   // Emoji or icon identifier
  featuredImage  String?  // URL to featured image
  content        String   // JSON string of content blocks
  source         String?  // e.g., "SAMA", "CMA", "SFDA"
  category       String?  // e.g., "Regulation", "Compliance", "Market"
  references     String?  // JSON string array of reference links
  pdfUrl         String?  // URL to PDF document
  date           DateTime
  publishedAt    DateTime
  featured       Boolean  @default(false)
  slug           String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([slug])
  @@index([featured])
  @@index([category])
}

model Statistic {
  id        String   @id @default(cuid())
  value     String   // e.g., "500+", "24/7", "98%"
  labelEn   String
  labelAr   String
  icon      String   // Emoji
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
  @@index([active])
}

model Hero {
  id             String   @id @default(cuid())
  name           String   // Internal name to identify this hero version
  titleEn        String
  titleAr        String
  subtitleEn     String
  subtitleAr     String
  descriptionEn  String
  descriptionAr  String
  ctaButtons     String   // JSON string of CTA buttons array
  active         Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([active])
}
